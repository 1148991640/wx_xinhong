/* pages/orders/orders.wxss */
.orders-box{
    color: #999;
    font-size: 28rpx;
}
.orders{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
    text-align: center;
}
.orders-list{
    padding-left: 30rpx;
    border-bottom: 20rpx solid #ededed;
   
}
.orders-list:last-child{
    border-bottom: 0;
}
.orders-number{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.orders-detail{
   
    height: 240rpx;
    padding: 35rpx 20rpx 35rpx 35rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.left{
  float: left;
  width: 160rpx
}
.right{
  float: left;
  width: 500rpx
}
.left image{
  width: 120rpx;
  height: 120rpx;
}
.orders-detail view{
    line-height: 60rpx;
}
.orders-detail .orders-status{
    position: absolute;
    right: 20rpx;
    top: 35rpx;
    height: 120rpx;
    line-height: 120rpx;
    color: #b42f2d;
}
.orders-footer{
    height: 60rpx;
    line-height: 60rpx;
    color: #2f2f2f;
    padding:15rpx 30rpx 15rpx 0;
}
.orders-footer .orders-btn{
    float: right;
    width: 170rpx;
    height: 60rpx;
    line-height:60rpx;
    border-radius: 6rpx;
    background: #b42f2d;
    color: #fff;
}
.orders-footer .orders-status{
    margin-right: 10rpx;
    float: right;
    width: 170rpx;
    height: 65rpx;
    line-height:65rpx;
    border-radius: 6rpx;
    background: #fff;
    color: #b42f2d;
}