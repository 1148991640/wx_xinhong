.wrap {
  display: flex;
  background: #f8f8f8;
  width: 100%;
  height: 100%;
}

.weui-search-bar {
  background-color: #48C23D;
  position: absolute;
  width: 100%;
}

.navLeft {
  padding-top: 13%;
  width: 20%;
  background: #ccc;
  height: 80%;
}

.navLeft text {
  display: block;
  font-size: 14px;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
  border-bottom: 1px solid #ccc;
}

.navLeft .active {
  box-sizing: border-box;
  background: #fff;
}

.navRight {
  padding-top: 15%;
  width: 80%;
  height: 80%;
}

.navRight-main-item {
  padding-top: 8px;
  width: 100%;
  height: 100%;
  display: flex;
}

.navRight-main-item-list {
  width: 100%;
  display: -webkit-flex;
  flex-wrap: wrap;
}

.navRight-main-item-list navigator {
  width: 33.33%;
  text-align: center;
}

.navRight-main-item-list navigator image {
  width: 60px;
  height: 60px;
}

.navRight-main-item-list navigator text {
  display: block;
  width: 100%;
  font-size: 12px;
  color: #666;
  margin: 12px 0;
}
